<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.sensors.Accelerometer"
    android:background="#ff000000">

    <ImageButton
        android:layout_width="144dp"
        android:layout_height="200dp"
        android:id="@+id/imageButton"
        android:background="@drawable/gyro"
        android:onClick="Gyroscope"
        android:layout_gravity="left|top" />

    <ImageButton
        android:layout_width="193dp"
        android:layout_height="129dp"
        android:id="@+id/imageButton2"
        android:background="@drawable/accicon"
        android:onClick="Accelerometer"
        android:layout_gravity="center" />

    <ImageButton
        android:layout_width="105dp"
        android:layout_height="153dp"
        android:id="@+id/imageButton3"
        android:background="@drawable/proxicon"
        android:onClick="Proximity"
        android:layout_gravity="right|bottom" />

</FrameLayout>
